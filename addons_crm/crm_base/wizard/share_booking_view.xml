<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_share_booking">
            <field name="name">Share booking</field>
            <field name="model">share.booking</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="booking_id" invisible="True"/>
                            <label for="company_shared_id" string="Select company share"/>
                            <div>
                                <field name="company_shared_id" options="{'no_open':True,'no_create':True}"/>
                            </div>
                        </group>
                        <footer>
                            <button name="get_company" type="object" string="Confirm" class="btn-info"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>