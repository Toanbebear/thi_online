<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- equiment.request : views -->
    <record id="hr_equipment_request_view_search" model="ir.ui.view">
        <field name="name">equipment.request.search</field>
        <field name="model">sci.maintenance.request</field>
        <field name="arch" type="xml">
            <search string="maintenance Request Search">
                <field name="name"/>
                <field name="category_id"/>
                <field name="user_id"/>
                <field name="equipment_id"/>
                <field name="stage_id"/>
                <field name="maintenance_team_id"/>
                <filter string="Yêu cầu của tôi" name="my_requests" domain="[('user_id', '=', uid)]"/>
                <separator/>
                <filter string="To do" domain="[('kanban_state', '!=', 'done')]" name="state_todo"/>
                <filter string="Request" domain="[]" name="kanban_request"/>
                <filter string="Done" name="kanban_state_block" domain="[('kanban_state', '=', 'done')]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('archive','=',True)]"/>
                <group  expand='0' string='Group by...'>
                    <filter string='Người tiếp nhận' name="assigned" domain="[]" context="{'group_by': 'user_id'}"/>
                    <filter string='Bộ phận tiếp nhận' name="category" domain="[]" context="{'group_by' : 'category_id'}"/>
                    <filter string='Trạng thái' name="stages" domain="[]" context="{'group_by' : 'stage_id'}"/>
                    <filter string='Loại bảo trì' name="maintenance_type" domain="[]" context="{'group_by' : 'maintenance_type'}"/>
                    <separator/>
                       <filter string="Ngày yêu cầu" name="creation_week" context="{'group_by':'request_date:week'}" help="Ngày yêu cầu"/>
                </group>
                <searchpanel>
                    <field name="category_id" icon="fa-users" />
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="hr_equipment_request_view_form" model="ir.ui.view">
        <field name="name">equipment.request.form</field>
        <field name="model">sci.maintenance.request</field>
        <field name="arch" type="xml">
            <form string="Maintenance Request">
                <header>
                    <button type="object" name="open_close_ticket_wizard" string="Gửi đánh giá" confirm="Bạn đã chắc chắn?"
                                class="btn btn-warning" attrs="{'invisible':[('stage_id','!=', 3)]}"/>
                    <field name="stage_id" widget="statusbar" options="{'clickable': '1'}" attrs="{'invisible': [('archive', '=', True)]}" statusbar_visible="new,doing,done,cancel"/>
                </header>
                <sheet>
                    <div class="oe_title" style="width:62%">
                        <label for="name" class="oe_edit_only" string="Chủ đề"/>
                        <h1>
                            <field name="name" placeholder="Yêu cầu bảo trì"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="channel"/>
                            <field name="person_name"/>
                            <field name="department"/>
                            <field name="email" />
                            <field name="phone"/>
                            <field name="maintenance_type" />
                            <field name="priority" widget="priority"/>
                            <field name="support_rating" readonly="1" attrs="{'invisible' :[('close_date', '=', False )]}"/>
                            <field name="close_date" invisible="1"/>
                            <field name="archive" invisible="1"/>
                        </group>
                        <group>
                            <field name="equipment_id"  context="{'default_category_id':category_id}" required="1"/>
                            <field name="category_id" required="1"/>
                            <field name="maintenance_team_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="user_id" string="Người phụ trách"/>
                            <field name="request_date" readonly="True"/>
                            <field name="close_date" groups="base.group_no_one" readonly="True"/>
                            <field name="schedule_date"/>
                            <label for="duration"/>
                            <div>
                                <field name="duration"
                                       widget="float_time"
                                       class="oe_inline"/> <span class="ml8">giờ</span>
                            </div>
                        </group>
                    </group>
                    <notebook>
                            <page name="des" string="Mô tả yêu cầu">
                                <field name='description'/>
                                <field name="attachment_ids">
                                    <tree editable="bottom" nolabel="1" limit="6">
                                        <field name="file" filename="file_name" string="Chọn tệp tin"/>
                                        <field name="file_name" force_save="1" string="Tên tệp tin"/>
                                        <field name="user_id" force_save="1" string="Người tải"/>
                                        <field name="description" string="Mô tả"/>
                                        <field name="date" string="Ngày đính kèm tệp"/>
                                        <button name="download_file" type="object" class="button_blank fa fa-download"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Danh sách nhân sự bảo trì">
                        		<field name="supervisor_ids">
                        			<tree limit="10">
                        				<field name="name" />
                                        <field name="work_phone" />
                        				<field name="department_id" />
                        				<field name="job_id" />
                        				<field name="parent_id" />
                        			</tree>
                        		</field>
                        	</page>
                            <page name="des_tool" string="Hiện trạng/Nguyên nhân">
                                <group>
                                    <field name='tools_description'/>
                                </group>
                            </page>
                            <page name="des_opera" string="Giải pháp/Khắc phục">
                                <group>
                                    <field name='operations_description'/>
                                </group>
                            </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_equipment_request_view_kanban" model="ir.ui.view">
        <field name="name">equipment.request.kanban</field>
        <field name="model">sci.maintenance.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" create="false">
                <field name="stage_id"/>
                <field name="color"/>
                <field name="priority"/>
                <field name="equipment_id"/>
                <field name="user_id"/>
                <field name="category_id"/>
                <field name="kanban_state"/>
                <field name="message_needaction_counter"/>
                <field name="activity_ids" />
                <field name="activity_state" />
                <templates>
                    <t t-name="kanban-tooltip">
                       <ul class="oe_kanban_tooltip">
                          <li><b>Category:</b> <field name="category_id"/></li>
                          <li><b>Request to:</b> <field name="user_id"/></li>
                       </ul>
                    </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click oe_semantic_html_override">
                            <div class="o_dropdown_kanban dropdown">

                                <a role="button" class="dropdown-toggle o-no-caret btn" data-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit...</a></t>
                                    <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                                    <ul class="oe_kanban_colorpicker" data-field="color"/>
                                </div>
                            </div>
                            <div class="oe_kanban_content" tooltip="kanban-tooltip">
                                <div class="o_kanban_record_top">
                                    <b class="o_kanban_record_title"><field name="name"/></b>
                                </div>
                                <div class="o_kanban_record_body">
                                    Bộ phận tiếp nhận: <span t-if="record.category_id.raw_value"><field name="category_id"/></span>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="priority" widget="priority"/>
                                        <t t-if="record.message_needaction_counter.raw_value">
                                            <span role="alert" class='oe_kanban_mail_new' title='Unread Messages'><i class='fa fa-comments' role="img" aria-label="Unread Messages"/><t t-raw="record.message_needaction_counter.raw_value"/></span>
                                        </t>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <img t-att-src="kanban_image('res.users', 'image_small', record.user_id.raw_value)" t-att-title="record.user_id.value" t-att-alt="record.user_id.value" width="24" height="24" class="oe_kanban_avatar float-right"/>
                                    </div>
                                </div>
                            </div>
                            <div class="oe_clear"></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

