        action="hr_equipment_request_action"
        groups="group_equipment_user,base.group_user"
        sequence="1"/>

    <menuitem
        id="menu_m_server_request_form"
        name="Yêu cầu bảo trì/bảo dưỡng"
        parent="menu_maintenance_title"
