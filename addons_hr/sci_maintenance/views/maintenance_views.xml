    <record id="view_maintenance_request_timeline" model="ir.ui.view">
        <field name="model">sci.maintenance.request</field>
        <field name="type">timeline</field>
        <field name="arch" type="xml">
            <timeline date_start="request_date"
                      date_stop="close_date"
                      string="Yêu cầu"
                      default_group_by="user_id"
                      event_open_popup="true"
                      zoomKey="ctrlKey"
                      colors="#ec7063:stage_id == false;#2ecb71:kanban_state=='done';">
                <field name="user_id"/>
                <templates>
                    <div t-name="timeline-item">
                        <div t-esc="record.name"/>
                        Assigned to:
                        <span t-esc="record.user_id[1]"/>
                    </div>
                </templates>
            </timeline>
        </field>
    </record>

