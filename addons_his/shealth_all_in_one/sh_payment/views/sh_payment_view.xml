<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--			SEARCH-->
        <record model="ir.ui.view" id="sh_walkin_payment_search">
            <field name="name">Tìm kiếm thanh toán</field>
            <field name="model">account.payment</field>
            <field name="arch" type="xml">
                <search string="Tìm phiếu">
                    <separator orientation="vertical"/>
                    <!--                            <field name="walkin" string="Phiếu khám" select="1"/>-->
                    <field name="crm_id" string="Booking" select="1"/>
                    <field name="partner_id" string="Bệnh nhân" select="1"/>
                    <field name="state" string="Trạng thái" select="1"/>
                    <filter string="Thanh toán Nháp" name="state_draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Thanh toán Đã vào sổ" name="state_posted" domain="[('state', '=', 'posted')]"/>
                    <group expand="0" string="Group By..." colspan="11" col="11">
                        <filter name="group_crm_id" string="Booking" context="{'group_by':'crm_id'}"/>
                        <filter name="group_payment_date" string="Ngày thanh toán"
                                context="{'group_by':'payment_date:day'}"/>
                        <filter name="group_payment_type" string="Loại thanh toán"
                                context="{'group_by':'payment_type'}"/>
                        <!--                            <filter name="group_company_id" string="Công ty" context="{'group_by':'company_id'}"/>-->
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="sh_walkin_payment_view_tree">
            <field name="name">Thông tin thanh toán</field>
            <field name="model">account.payment</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree decoration-info="state=='draft'" decoration-success="state=='posted'"
                      default_order="payment_date desc">
                    <field name="payment_date" string="Ngày thanh toán"/>
                    <!--						<field name="walkin" string="Phiếu khám"/>-->
                    <field name="name" string="Mã phiếu"/>
                    <field name="crm_id" string="Booking"/>
                    <field name="payment_type" string="Loại"/>
                    <field name="patient" string="Bệnh nhân" class="text-uppercase"/>
                    <field name="journal_id"/>
                    <field name="amount" string="Số tiền"/>
                    <field name="communication" string="Lý do thanh toán"/>
                    <field name="state" string="Trạng thái"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <!-- Created new Form View for wizard-->
        <record id="form_view_choose_walkin_wizard" model="ir.ui.view">
            <field name="name">wizard.choose.walkin</field>
            <field name="model">wizard.choose.walkin</field>
            <field name="arch" type="xml">
                <form string="Chọn phiếu khám gắn với đặt cọc">
                    <group>
                        <field name="walkin_id" options="{'no_create':True}">
                            <tree class="tree_no_open">
                                <field name="name"/>
                                <field name="patient"/>
                                <field name="institution"/>
                                <field name="service" widget="many2many_tags"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button class="btn-primary" name="add_walkin_for_payment" type="object" string="Áp dụng"/>
                        <button string="Hủy" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

